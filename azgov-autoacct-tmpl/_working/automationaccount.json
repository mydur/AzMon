{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Environment": {
      "type": "string",
      "allowedValues": ["dev", "test", "acc", "prod"],
      "defaultValue": "prod",
      "metadata": {
        "description": "Can one of the following, dev-test-acc-prod"
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "westeurope",
      "metadata": {
        "description": "The region in which to deploy the automation account."
      }
    },
    "UniqueNumber": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Unique number to add to the name of the automation account."
      }
    }
  },
  "variables": {
    "Environment": "[toLower(replace(parameters('Environment'), '-', ''))]",
    "automationAccountName": "[concat('azgov', parameters('UniqueNUmber'),'-', variables('Environment'), '-auto')]"
  },
  "resources": [
    {
      "type": "Microsoft.Automation/automationAccounts",
      "name": "[variables('automationAccountName')]",
      "apiVersion": "2015-10-31",
      "location": "[parameters('Location')]",
      "tags": {},
      "scale": null,
      "properties": {
        "sku": {
          "name": "Free"
        }
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Automation/automationAccounts/providers/locks",
      "name": "[concat(variables('automationAccountName'), '/Microsoft.Authorization/automationaccountlock')]",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
      ],
      "properties": {
        "level": "CannotDelete",
        "notes": "Automation account should not be deleted."
      }
    }
  ],
  "outputs": {}
}
